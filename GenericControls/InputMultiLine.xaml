<UserControl x:Class="GenericControls.InputMultiLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenericControls"
             mc:Ignorable="d" >
    <StackPanel x:Name="LayoutRoot" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top">
        <TextBlock Text="{Binding Path=Label}" Margin="5, 5, 5, 0"/>
        <TextBox x:Name="InputBox" Margin="5, 0, 5, 5" HorizontalAlignment="Stretch" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" MaxLines="{Binding Path=Lines}" MinLines="{Binding Path=Lines}"/>
    </StackPanel>
</UserControl>

<UserControl x:Class="GenericControls.LabeledCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenericControls"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch">
    <Grid x:Name="LayoutRoot" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Path=Label}" Margin="5"/>
        <CheckBox Grid.Column="1" x:Name="CheckBox" VerticalAlignment="Center" Margin="0,0,5,0" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
